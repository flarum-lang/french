# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project across various editors
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,php}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
